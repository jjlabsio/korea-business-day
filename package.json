{
  "name": "korea-business-day",
  "version": "2.0.0",
  "description": "한국의 영업일, 공휴일, 주식시장 개장일을 계산하는 Typescript 라이브러리",
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@9.2.0",
  "homepage": "https://github.com/jjlabsio/korea-business-day#readme",
  "bugs": {
    "url": "https://github.com/jjlabsio/korea-business-day/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jjlabsio/korea-business-day.git"
  },
  "author": "jjlabsio",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c -w",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --config eslint.config.ts",
    "release": "pnpm build && bumpp && npm publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "rollup": "^4.48.1",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0"
  }
}
